@model IEnumerable<comp2007w2018finalB.Models.Brewery>

@{
    ViewBag.Title = "Breweries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Breweries</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        @*<th></th>*@
    </tr>

    @foreach (var a in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => a.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => a.City)
            </td>
            <td>
                <a href="@a.Url" target="_blank">@Html.DisplayFor(modelItem => a.Url)</a>
            </td>
            <td>
                <img src="~/Content/images/@a.Logo" alt="@a.Name" />
            </td>
            
        </tr>
    }

</table>